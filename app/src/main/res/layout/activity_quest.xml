<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestActivity"
    android:background="#192841">

    <ImageView
        android:id="@+id/back_button10"
        android:layout_width="64dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/market_rectangle_2"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/market"
        android:layout_width="137dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/jockey_one"
        android:gravity="center"
        android:text="Quests"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:fontFamily="@font/jockey_one"
        android:text="Quests reset daily at UTC+8 00:00:00"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_quest1"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:src="@drawable/quest_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/jockey_one"
        android:text="Log in once today"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/iv_quest1"
        app:layout_constraintTop_toTopOf="@+id/iv_quest1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/jockey_one"
        android:text="Reward: 1 loot box"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_quest1"
        app:layout_constraintStart_toStartOf="@+id/iv_quest1" />

    <TextView
        android:id="@+id/tv_showComplete1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/jockey_one"
        android:text="Quest Complete"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_quest1"
        app:layout_constraintEnd_toEndOf="@+id/iv_quest1"
        app:layout_constraintStart_toStartOf="@+id/iv_quest1" />

    <TextView
        android:id="@+id/tv_questComplete1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginBottom="4dp"
        android:visibility="invisible"
        android:fontFamily="@font/jockey_one"
        android:text="Tap to claim reward"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_quest1"
        app:layout_constraintStart_toStartOf="@+id/iv_quest1" />

    <ImageView
        android:id="@+id/iv_quest2"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:src="@drawable/quest_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_task2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/jockey_one"
        android:text="Tap 1000 times"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/iv_quest2"
        app:layout_constraintTop_toTopOf="@+id/iv_quest2" />

    <TextView
        android:id="@+id/tv_taskquota2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/jockey_one"
        android:text="0/1000"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_quest2"
        app:layout_constraintTop_toTopOf="@+id/iv_quest2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/jockey_one"
        android:text="Reward: 1 loot box"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_quest2"
        app:layout_constraintStart_toStartOf="@+id/iv_quest2" />

    <TextView
        android:id="@+id/tv_showComplete2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/jockey_one"
        android:text="Quest Complete"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_quest2"
        app:layout_constraintEnd_toEndOf="@+id/iv_quest2"
        app:layout_constraintStart_toStartOf="@+id/iv_quest2" />

    <TextView
        android:id="@+id/tv_questComplete2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/jockey_one"
        android:visibility="invisible"
        android:text="Tap to claim reward"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_quest2"
        app:layout_constraintStart_toStartOf="@+id/iv_quest2" />

    <ImageView
        android:id="@+id/iv_quest3"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:src="@drawable/quest_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_task3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/jockey_one"
        android:text="Walk 100 steps"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/iv_quest3"
        app:layout_constraintTop_toTopOf="@+id/iv_quest3" />

    <TextView
        android:id="@+id/tv_taskquota3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/jockey_one"
        android:text="0/100"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_quest3"
        app:layout_constraintTop_toTopOf="@+id/iv_quest3"/>

    <TextView
        android:id="@+id/tv_showComplete3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/jockey_one"
        android:text="Quest Complete"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_quest3"
        app:layout_constraintEnd_toEndOf="@+id/iv_quest3"
        app:layout_constraintStart_toStartOf="@+id/iv_quest3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/jockey_one"
        android:text="Reward: 1 loot box"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_quest3"
        app:layout_constraintStart_toStartOf="@+id/iv_quest3" />

    <TextView
        android:id="@+id/tv_questComplete3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/jockey_one"
        android:visibility="invisible"
        android:text="Tap to claim reward"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_quest3"
        app:layout_constraintStart_toStartOf="@+id/iv_quest3" />

</androidx.constraintlayout.widget.ConstraintLayout>